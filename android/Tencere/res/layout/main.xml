<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:orientation="horizontal">
        <LinearLayout android:id="@+id/linearLayout2" android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent">
		    <RelativeLayout android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/relativeLayout1">
		    		 
		    <ListView android:id="@+id/listMessages"
		              android:layout_width="wrap_content"
		              android:layout_height="wrap_content"
					  android:drawSelectorOnTop="true"
		              android:stackFromBottom="true"
		              android:transcriptMode="normal" 
		            />
		            <LinearLayout android:layout_height="wrap_content"  android:gravity="right" android:id="@+id/linearLayout8" android:layout_width="fill_parent" android:fadingEdge="vertical|horizontal">
		              
		                <Button android:textSize="11sp" android:text="NEW" android:onClick="newconversationClick" android:id="@+id/newconversation" android:fadingEdge="vertical" android:textStyle="bold" android:layout_width="80dip" android:clickable="true" android:hapticFeedbackEnabled="true" android:layout_height="32dip"></Button>
		    		     
		                <Button android:textSize="11sp" android:text="END" android:onClick="endClick" android:id="@+id/end" android:fadingEdge="vertical" android:textStyle="bold" android:layout_width="80dip" android:hapticFeedbackEnabled="true" android:layout_height="32dip"></Button>
		         
		         
		            </LinearLayout>
		    </RelativeLayout>
		    <HorizontalScrollView android:layout_height="wrap_content" android:id="@+id/horizontalScrollView1" android:layout_width="fill_parent" android:padding="5px" android:fadingEdge="vertical" android:foregroundGravity="fill_horizontal|center_horizontal" android:isScrollContainer="true" android:layout_gravity="center">
		        <LinearLayout android:id="@+id/linearLayout3" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="horizontal">


		                <Button android:textSize="10sp" android:text="Name" android:layout_height="wrap_content" android:onClick="nameClick" android:layout_width="wrap_content" android:id="@+id/trade_name"></Button>
		                <Button android:textSize="10sp" android:text="Sex" android:layout_height="wrap_content" android:onClick="sexClick" android:layout_width="wrap_content" android:id="@+id/trade_sex"></Button>
		                <Button android:textSize="10sp" android:text="Age" android:layout_height="wrap_content" android:onClick="ageClick" android:layout_width="wrap_content" android:id="@+id/trade_age"></Button>
		                <Button android:textSize="10sp" android:text="Location" android:layout_height="wrap_content" android:onClick="locationClick" android:layout_width="wrap_content" android:id="@+id/trade_location"></Button>
		                <Button android:textSize="10sp" android:text="Number" android:layout_height="wrap_content" android:onClick="numberClick" android:layout_width="wrap_content" android:id="@+id/number"></Button>
	            		<Button android:textSize="10sp" android:text="Mail" android:layout_height="wrap_content" android:onClick="mailClick" android:layout_width="wrap_content" android:id="@+id/mail"></Button>
	            

		        </LinearLayout>
		    </HorizontalScrollView>          
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout9">
                	<EditText android:id="@+id/sendText"
		            	android:layout_height="wrap_content"
		            	android:layout_width="wrap_content"
		              	android:singleLine="false"
		              	android:textSize="16sp"
		              	android:autoText="false"
		              	android:capitalize="none"
		              	android:layout_weight="1" 
		              	android:scrollHorizontally="true" 
		              	/>

                	<Button android:id="@+id/send" 
	                	android:onClick="sendClick"	
        				android:text="   Send   "
        				android:layout_height="wrap_content" 
        				android:layout_width="wrap_content" android:textStyle="bold" android:textSize="18sp">
        		</Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
